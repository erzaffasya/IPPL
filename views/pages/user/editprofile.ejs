<%- include('../../components/link') %>
<section>
    <div class="">
        <div class="col-2 p-5 position-fixed sideBar">
            <h1 class="text-warning">Kasidi</h1>
            <div class="mt-5 beranda text-white">
                <a href="/homes">
                    <i class="fa-2x fas fa-home"></i>
                    <span class="ms-2">Beranda</span>
                </a>
            </div>
            <div class="mt-4 fitur text-white">
                <a href="/fitures">
                    <i class="fa-2x fas fa-list-ul"></i>
                    <span class="ms-2">Fitur</span>
                </a>
            </div>
            <div class="mt-4 transaksi text-white">
                <a href="/transaksis">
                    <i class="fa-2x fas fa-hand-holding-usd"></i>
                    <span class="ms-2">Transaksi</span>
                </a>
            </div>
            <div class="mt-4 riwayat text-white">
                <a href="/riwayats">
                    <i class="fa-2x fas fa-history"></i>
                    <span class="ms-2">Riwayat</span>
                </a>
            </div>
            <div class="mt-4 logout text-white">
                <a href="/logouts">
                    <i class="fa-2x fas fa-history"></i>
                    <span class="ms-2">Logout</span>
                </a>
            </div>
        </div>
        <div class="container m-5 col-10 position-fixed mainBar">
            <% datas.forEach( function(user){ %>
                <h1 class="fw-bold">Edit Profil</h1>
                <form action="/editProfiles" method="POST">
                    <div class="row align-items-top">
                        <div class="col">
                            <div class="mb-3 name">
                                <label class="form-label">Nama</label>
                                <input class="form-control" name="name" value="<%= user.name %>">
                            </div>
                            <div class="mb-3 nim">
                                <label class="form-label">Nim</label>
                                <input class="form-control" name="nim" value="<%= user.nim %>">
                            </div>
                            <div class="mb-3 prodi">
                                <label class="form-label">Prodi</label>
                                <input class="form-control" name="prodi" value="<%= user.prodi %>">
                            </div>
                            <div class="mb-3 foto">
                                <label class="form-label">Foto</label>
                                <input class="form-control" name="foto" value="<%= user.foto %>">
                            </div>
                        </div>
                        <div class="col">
                            <div class="mb-3 email">
                                <label for="exampleInputEmail1" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" value="<%= user.email %>">
                            </div>
                            <div class="mb-3 password">
                                <label for="exampleInputPassword1" class="form-label">Password</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" name="password" value="<%= user.password %>">
                            </div>
                        </div>
                    </div>
                    <div class="container mt-5 align-items-center text-center">
                        <button type="submit" class="btn btn-primary">Simpan Data</button>
                    </div>
                </form>
            <% }) %> 
        </div>
    </div>
</section>